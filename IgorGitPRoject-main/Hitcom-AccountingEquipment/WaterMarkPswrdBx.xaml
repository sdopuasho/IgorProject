<UserControl x:Class="Hitcom_AccountingEquipment.WaterMarkPswrdBx"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hitcom_AccountingEquipment"
             mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Border x:Name="brd"
            Background="Transparent" VerticalAlignment="Stretch">
        <Grid>
            <TextBlock x:Name="tbWatermark" TextWrapping="Wrap"
                       IsHitTestVisible="False" Padding="0"
                       VerticalAlignment="Center" Margin="5,0,0,0" Opacity="0" Foreground="#a961a0" FontFamily="Moloto" FontSize="20" Background="Transparent"/>
            <PasswordBox x:Name="pb" LostFocus="PasswordLostFocus" GotFocus="PasswordGotFocus"
                         PasswordChanged="Pb_OnPasswordChanged"
                         Margin="5,0,0,0" VerticalAlignment="Center" BorderThickness="0" Opacity="0" Padding="0"  Foreground="#a961a0" FontFamily="Moloto" FontSize="20"  Background="Transparent" />
        </Grid>
    </Border>
</UserControl>
